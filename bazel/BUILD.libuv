load("@rules_foreign_cc//foreign_cc:defs.bzl", "cmake")

filegroup(
    name = "all_srcs",
    srcs = glob(
        include = ["**"],
    ),
)

cmake(
    name = "libuv",
    cache_entries = {
        "BUILD_TESTING": "OFF",
    },
    lib_source = "//:all_srcs",
    out_static_libs = [
        "libuv_a.a",
    ],
    visibility = ["//visibility:public"]
)
